# Hotel Price Scraper Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# WebBeds Configuration
WEBBEDS_BASE_URL=https://www.webbeds.com
WEBBEDS_SEARCH_ENDPOINT=/en/hotels/search

# Database Configuration
DB_PATH=./data/hotel_prices.db
DB_TIMEOUT=5000

# Scraper Configuration
SCRAPER_TIMEOUT=30000
SCRAPER_HEADLESS=true
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_DELAY=5000

# Puppeteer Configuration
PUPPETEER_SKIP_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/scraper.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Configuration
API_REQUEST_TIMEOUT=10000
API_MAX_REQUESTS_PER_MINUTE=60
